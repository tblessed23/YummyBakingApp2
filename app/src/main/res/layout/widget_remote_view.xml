<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeecc"
    android:id="@+id/remotewidget_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/remotewidget_baking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        tools:text="123" />

    <TextView
        android:id="@+id/remotewidget_baking_ingredientlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        tools:text="123" />

    <TextView
        android:id="@+id/remotewidget_default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        android:text="You are viewing the gridview" />

</LinearLayout>